{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2022",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist-electron-app",
		"baseUrl": ".",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"exclude": [
		"./src",
		"./copyStaticAssets.ts"
	]
}
